<p id="notice"><%= notice %></p>

<h1>Reports</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Categories</th>
      <th>Rut</th>
      <th>Telephone</th>
      <th>Deceased</th>
      <th>Wounded</th>
      <th>Disappeared</th>
      <th>Damaged buildings</th>
      <th>Damaged vehicles</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reports.each do |report| %>
      <tr>
        <td><%= report.title %></td>
        <td><%= report.description %></td>
        <td><%= report.categories %></td>
        <td><%= report.rut %></td>
        <td><%= report.telephone %></td>
        <td><%= report.deceased %></td>
        <td><%= report.wounded %></td>
        <td><%= report.disappeared %></td>
        <td><%= report.damaged_buildings %></td>
        <td><%= report.damaged_vehicles %></td>
        <td><%= link_to 'Show', report %></td>
        <td><%= link_to 'Edit', edit_report_path(report) %></td>
        <td><%= link_to 'Destroy', report, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Report', new_report_path %>
